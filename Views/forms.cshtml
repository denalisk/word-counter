@{
  Layout="Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Find out how <span class="highlight">many times</span> a word appears in a sentence or paragraph!</h2>
    <form id="" action="/" method="post">
        <label for="target-word">Give me a word!</label>
        <input type="text" id="target-word" name="target-word" placeholder="word" required>
        <label for="long-string">Give me a sentence or a paragraph or a novel</label>
        <input type="text" id="long-string" name="long-string" placeholder="Call me Ishmael" required>
        <button id="form-submit" type="submit" class="btn btn-danger" name="button">Submit</button>
    </form>
</div>
